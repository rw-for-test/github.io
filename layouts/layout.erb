<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "OH!Study 留遊學教育中心" %></title>

    <%= stylesheet_link_tag "normalize", "all" %>
  </head>

  <body class="<%= page_classes %>" data-spy="scroll" data-target="#index-navigate-bar" data-offset='140'>
    <%= partial "views/shared/header" %>
    <div class="l-content">
      <%= yield %>
    </div>
    <%= partial "views/shared/global_links" %>
    <%= partial "views/shared/footer" %>
    <%= javascript_include_tag  "all" %>
  </body>
</html>
