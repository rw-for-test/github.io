          <% data.members['members'].each do | member | %>
            <%= partial 'views/about/member_card',
              :locals => {
                :avatar => member.avatar,
                :name => member.name,
                :title => member.title,
                :email => member.email,
                :tel => member.tel,
                :skype => member.skype,
                :line => member.line,
                :link => member.link
              }
